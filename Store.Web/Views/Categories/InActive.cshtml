@model IEnumerable<Store.Models.ViewModels.Categories.AllCategoriesVM>

@{
    ViewBag.Title = "InActive";
}

<h2>Неактивни Категории</h2>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-10">
        </div>
        <div class="col-sm-2">
            <p>
                @Html.ActionLink("Active Categories", "Index")
            </p>
        </div>


    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PricePerHour)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerHour)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })

            </td>
        </tr>
    }

</table>
